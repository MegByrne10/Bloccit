<div class="row">
  <div class="span12">
    <div class="media">
      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url, class: 'pull-right' %>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"> <%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
        <hr/>
        <div>
          <h4>Interests</h4>
            <p>Possible form for answers to interests can go here.</p>
          <h4>Favorites Things</h4>
            <p>Possible form for answers to Favorite things can go here.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<hr/>

<div class="row">
  <div class="tabbable tabs-right">
    <ul class="nav nav-tabs">
      <li class="active"><a href="#posts" data-toggle="tab">Posts</a></li>
      <li><a href="#comments" data-toggle="tab">Comments</a></li>
    </ul>
    <div class="tab-content">
      <div class="tab-pane active" id="posts" >
        <%= render @posts %>
      </div>
      <div class="tab-pane" id="comments">
        <%= render @user.comments %>
      </div>
    </div>
  </div>
</div>